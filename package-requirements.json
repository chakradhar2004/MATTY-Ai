{
  "name": "matty-ai-design-tool-requirements",
  "version": "1.0.0",
  "description": "Complete dependency requirements for Matty AI Design Tool",
  "main": "index.js",
  "scripts": {
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "check-requirements": "node scripts/check-requirements.js",
    "setup-env": "cp server/env.example server/.env"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "check-node-version": "^4.2.1"
  },
  "requirements": {
    "system": {
      "node": ">=16.0.0",
      "npm": ">=8.0.0",
      "mongodb": ">=4.4.0",
      "ram": "2GB",
      "storage": "10GB"
    },
    "external_services": {
      "mongodb_atlas": {
        "required": true,
        "free_tier": "512MB storage",
        "setup_url": "https://www.mongodb.com/atlas"
      },
      "cloudinary": {
        "required": true,
        "free_tier": "25GB storage, 25GB bandwidth",
        "setup_url": "https://cloudinary.com/"
      }
    },
    "backend": {
      "express": "^4.18.2",
      "mongoose": "^8.0.3",
      "bcryptjs": "^2.4.3",
      "jsonwebtoken": "^9.0.2",
      "helmet": "^7.1.0",
      "cors": "^2.8.5",
      "express-rate-limit": "^7.1.5",
      "multer": "^1.4.5-lts.1",
      "cloudinary": "^1.41.0",
      "express-validator": "^7.0.1",
      "dotenv": "^16.3.1",
      "nodemon": "^3.0.2"
    },
    "frontend": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "react-scripts": "^5.0.1",
      "@reduxjs/toolkit": "^2.0.1",
      "react-redux": "^9.0.4",
      "react-router-dom": "^6.20.1",
      "react-konva": "^18.2.10",
      "konva": "^9.2.0",
      "axios": "^1.6.2",
      "react-dropzone": "^14.2.3",
      "react-toastify": "^9.1.3",
      "lucide-react": "^0.294.0",
      "jspdf": "^2.5.1",
      "html2canvas": "^1.4.1",
      "tailwindcss": "^3.3.6",
      "autoprefixer": "^10.4.16",
      "postcss": "^8.4.32",
      "clsx": "^2.0.0"
    },
    "optional": {
      "redis": "^4.6.0",
      "socket.io": "^4.7.4",
      "socket.io-client": "^4.7.4",
      "nodemailer": "^6.9.7",
      "sharp": "^0.32.6"
    }
  },
  "environment_variables": {
    "required": {
      "MONGODB_URI": "mongodb://localhost:27017/matty-design",
      "JWT_SECRET": "your-super-secret-jwt-key-here",
      "CLOUDINARY_CLOUD_NAME": "your-cloudinary-cloud-name",
      "CLOUDINARY_API_KEY": "your-cloudinary-api-key",
      "CLOUDINARY_API_SECRET": "your-cloudinary-api-secret"
    },
    "optional": {
      "PORT": "5000",
      "NODE_ENV": "development",
      "CLIENT_URL": "http://localhost:3000"
    }
  },
  "browser_support": {
    "chrome": ">=90",
    "firefox": ">=88",
    "safari": ">=14",
    "edge": ">=90"
  },
  "deployment": {
    "frontend": {
      "vercel": "recommended",
      "netlify": "alternative",
      "github_pages": "static"
    },
    "backend": {
      "render": "recommended",
      "railway": "alternative",
      "cyclic": "alternative",
      "heroku": "alternative"
    },
    "database": {
      "mongodb_atlas": "recommended",
      "self_hosted": "advanced"
    }
  },
  "performance": {
    "minimum": {
      "ram": "2GB",
      "cpu": "2 cores",
      "storage": "10GB",
      "network": "100Mbps"
    },
    "recommended": {
      "ram": "4GB",
      "cpu": "4 cores",
      "storage": "50GB SSD",
      "network": "1Gbps"
    }
  },
  "security": {
    "password_hashing": "bcrypt with 12 salt rounds",
    "jwt_authentication": "required",
    "cors_protection": "configured",
    "rate_limiting": "100 requests per 15 minutes",
    "input_validation": "server-side",
    "security_headers": "helmet"
  },
  "monitoring": {
    "process_management": "PM2",
    "logging": "Winston",
    "application_monitoring": "New Relic",
    "error_tracking": "Sentry"
  },
  "check_script": {
    "check-requirements.js": "#!/usr/bin/env node\nconst checkNodeVersion = require('check-node-version');\n\ncheckNodeVersion({ node: '>=16.0.0', npm: '>=8.0.0' }, (error, result) => {\n  if (error) {\n    console.error('❌ Requirements not met:', error);\n    process.exit(1);\n  }\n  console.log('✅ All requirements met!');\n  console.log('Node.js:', result.node.version);\n  console.log('npm:', result.npm.version);\n});"
  }
}
